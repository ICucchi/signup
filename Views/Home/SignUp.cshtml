@model Prenotazione;
@{
    ViewData["Title"] = "SingUp";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="text-center mb-4">SignUp</h1>
                    <form method="post" asp-action="Conferma">
                        <div class="form-group">
                            <label asp-for="Cognome" class="font-weight-bold">Il tuo Cognome:</label>
                            <input asp-for="Cognome" class="form-control" placeholder="Iacopo">
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="font-weight-bold">Il tuo Nome:</label>
                            <input asp-for="Nome" class="form-control" placeholder="Cucchi">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="font-weight-bold">La tua Email:</label>
                            <input asp-for="Email" class="form-control" placeholder="cucchi.iacopo@gmail.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataDiNascita" class="font-weight-bold">La tua data di nascita:</label>
                            <input asp-for="DataDiNascita" class="form-control" type="date">
                        </div>
                        <div class="form-group">
                            <label asp-for="Sesso" class="font-weight-bold">Sesso:</label>
                            <div>
                                <label class="mr-2">Maschio</label>
                                <input type="radio" name="Sesso" value="Maschio" asp-for="Sesso" class="mr-2">
                                <label class="mr-2">Femmina</label>
                                <input type="radio" name="Sesso" value="Femmina" asp-for="Sesso" class="mr-2">
                                <label class="mr-2">Altro</label>
                                <input type="radio" name="Sesso" value="Null" asp-for="Sesso" class="mr-2">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ruolo" class="font-weight-bold">Ruolo:</label>
                            <select id="selectRuolo" name="Ruolo" class="form-control">
                                <option value="Studente">Studente</option>
                                <option value="Professore">Professore</option>
                                <option value="Genitore">Genitore</option>
                            </select>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary btn-block">Conferma</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
